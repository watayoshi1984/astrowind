---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import { METADATA, APP_BLOG } from '~/config';

const metadata = {
  title: METADATA.title.default,
  description: METADATA.description.default,
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- ヒーローセクション -->
  <Hero
    image={{ src: '~/assets/images/hero-image.png', alt: 'ビジネスミーティング' }}
    title="ビジネスの未来を創造する"
    subtitle="革新的なソリューションで、お客様のビジネスの成長を支援します。"
    actions={[
      { variant: 'primary', text: 'お問い合わせ', href: '/contact' },
      { text: 'サービス詳細', href: '/services' },
    ]}
  />

  <!-- 主要な統計 -->
  <Stats
    title="信頼の実績"
    stats={[
      { title: '顧客満足度', amount: '98%' },
      { title: '取引実績', amount: '1000+' },
      { title: '業界経験', amount: '15年' },
      { title: 'パートナー企業', amount: '50+' },
    ]}
  />

  <!-- サービス紹介 -->
  <Features
    title="サービス"
    subtitle="お客様のニーズに合わせた最適なソリューションを提供します"
    columns={3}
    items={[
      {
        title: 'コンサルティング',
        description: '経験豊富なコンサルタントが、お客様のビジネス課題を解決します。',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'システム開発',
        description: '最新技術を活用した、高品質なシステム開発を提供します。',
        icon: 'tabler:devices',
      },
      {
        title: 'デジタルマーケティング',
        description: 'データドリブンなアプローチで、効果的なマーケティング施策を実現します。',
        icon: 'tabler:target',
      },
    ]}
  />

  <!-- 選ばれる理由 -->
  <Content
    isReversed
    image={{ src: '~/assets/images/features.jpg', alt: 'チーム作業' }}
    title="選ばれる理由"
    items={[
      {
        title: '豊富な経験と実績',
        description: '15年以上の業界経験と1000社以上の支援実績があります。',
      },
      {
        title: '専門性の高いチーム',
        description: '各分野のエキスパートが、最適なソリューションを提供します。',
      },
      {
        title: 'きめ細かいサポート',
        description: 'プロジェクト開始から完了まで、一貫したサポート体制を整えています。',
      },
    ]}
  />

  <!-- サポートプロセス -->
  <Steps
    title="サポートプロセス"
    items={[
      {
        title: '課題のヒアリング',
        description: 'お客様の課題やニーズを詳しくお伺いします。',
        icon: 'tabler:message-circle',
      },
      {
        title: '解決策の提案',
        description: '最適な解決策をご提案します。',
        icon: 'tabler:bulb',
      },
      {
        title: '実行とサポート',
        description: '提案した解決策を実行し、継続的にサポートします。',
        icon: 'tabler:rocket',
      },
    ]}
  />

  <!-- よくある質問 -->
  <FAQs
    title="よくある質問"
    items={[
      {
        question: '初回相談は無料ですか？',
        answer: 'はい、初回のご相談は無料です。お気軽にお問い合わせください。',
      },
      {
        question: '対応可能な地域は？',
        answer: '全国どこでもオンラインで対応可能です。必要に応じて訪問もいたします。',
      },
      {
        question: '料金体系について知りたい',
        answer: 'プロジェクトの規模や内容に応じて、最適な料金プランをご提案いたします。',
      },
    ]}
  />

  <!-- 最新ブログ記事 -->
  <BlogLatestPosts
    title="最新情報"
    information={`${APP_BLOG.categoryDefault}カテゴリーの最新記事をご紹介します。`}
  />

  <!-- お問い合わせ誘導 -->
  <CallToAction
    title="お気軽にお問い合わせください"
    subtitle="専門スタッフが丁寧にご対応いたします"
    actions={[{ variant: 'primary', text: 'お問い合わせ', href: '/contact' }]}
  />
</Layout>
