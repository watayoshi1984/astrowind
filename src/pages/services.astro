---
import Layout from '~/layouts/PageLayout.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Hero from '~/components/widgets/Hero.astro';

import { METADATA } from '~/config';

const metadata = {
  title: 'サービス一覧 | Company Name',
  description: METADATA.description.services,
  breadcrumb: [
    {
      text: 'サービス',
      href: '/services',
    },
  ],
};
---

<Layout metadata={metadata}>
  <!-- ヒーローセクション -->
  <Hero
    title="サービス一覧"
    subtitle="お客様のビジネスの成長を支援する多彩なサービスをご用意しています"
  />

  <!-- サービス詳細 -->
  <Features
    id="services"
    title="主要サービス"
    subtitle="お客様のニーズに合わせた最適なソリューションを提供します"
    columns={3}
    items={[
      {
        title: 'ビジネスコンサルティング',
        description: `
          - 経営戦略立案
          - 業務改善
          - デジタル化支援
          - 人材育成
        `,
        icon: 'tabler:chart-dots',
      },
      {
        title: 'システム開発',
        description: `
          - Web/モバイルアプリ開発
          - クラウドシステム構築
          - レガシーシステム刷新
          - 保守・運用
        `,
        icon: 'tabler:devices',
      },
      {
        title: 'デジタルマーケティング',
        description: `
          - SEO/MEO対策
          - SNSマーケティング
          - コンテンツマーケティング
          - 広告運用
        `,
        icon: 'tabler:target',
      },
    ]}
  />

  <!-- サービスの特徴 -->
  <Content
    isReversed
    image={{ src: '~/assets/images/features.jpg', alt: 'サービスの特徴' }}
    title="サービスの特徴"
    items={[
      {
        title: 'ワンストップソリューション',
        description: '戦略立案から実装、運用までトータルでサポートします。',
      },
      {
        title: 'カスタマイズ対応',
        description: 'お客様の規模や業界に合わせた最適なプランをご提案します。',
      },
      {
        title: '実績に基づく提案',
        description: '1000社以上の支援実績から得たノウハウを活かします。',
      },
    ]}
  />

  <!-- 料金プラン -->
  <Content
    title="料金プラン"
    subtitle="サービス内容や規模に応じて、最適なプランをご提案いたします"
    items={[
      {
        title: 'スポット支援',
        description: '単発の課題解決や小規模なプロジェクトに最適です。',
      },
      {
        title: '定額サポート',
        description: '継続的な支援が必要な場合に、月額定額でのサポートを提供します。',
      },
      {
        title: 'カスタムプラン',
        description: '大規模プロジェクトや特殊な要件にも柔軟に対応いたします。',
      },
    ]}
  />

  <!-- よくある質問 -->
  <FAQs
    title="よくある質問"
    items={[
      {
        question: '対応可能な業界を教えてください',
        answer: '製造業、小売業、サービス業など、幅広い業界に対応しています。',
      },
      {
        question: 'プロジェクトの期間はどのくらいですか？',
        answer: '案件の規模や内容によって異なりますが、一般的な開発案件で3〜6ヶ月程度です。',
      },
      {
        question: '契約期間の縛りはありますか？',
        answer: 'スポット支援の場合は契約期間の縛りはありません。定額サポートは最低6ヶ月からとなります。',
      },
      {
        question: '途中でプランの変更は可能ですか？',
        answer: 'はい、可能です。お客様のニーズに合わせて柔軟に対応いたします。',
      },
    ]}
  />

  <!-- お問い合わせ誘導 -->
  <CallToAction
    title="まずはご相談ください"
    subtitle="お客様に最適なソリューションをご提案いたします"
    actions={[
      { variant: 'primary', text: 'お問い合わせ', href: '/contact' },
      { text: '会社概要', href: '/company/about' },
    ]}
  />
</Layout>
